.mem-banner {
  background-color: #FFF;
  display: flex;
  align-items: center;
  padding: 50rpx 0;
  flex-direction: column;
  /* color: #FFF; */
}
.mem-banner .mem-tx {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  margin-bottom: 20rpx;
  border: hsla(0,0%,100%,.39) 1px solid;
  box-shadow: 0px 0px 10px #DDD;
}

.list-box {
  background-color: #FFF;
  margin-top: 30rpx;
}
.list-box .list-item {
  display: flex;
  border-bottom: #FAFAFA 1px solid;
  padding: 35rpx;
  font-size: 35rpx;
}

.list-item .icon {
  margin-right: 30rpx;
}

.list-item .icon-star {
  color: #8BC34A
}

.list-item .icon-zan {
  color: #03A9F4
}

.list-item .icon-comment {
  color: #17c1b1
}

.list-item .number {
  flex-grow: 1;
  text-align: right;
  color: #808E9F
}

.mem-navs {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #FFF;
  padding: 30rpx;
  font-size: 30rpx;
  /* box-shadow: 0px 0px 100px #DDD; */
}

.mem-navs > view {
  display: flex;
  flex-direction: column;
  align-items: center;
}